@model IEnumerable<PruebaTecnicaCovisian.Models.Alquiler>

@{
    ViewData["Title"] = "Lista de Alquileres";
}

<h1>@ViewData["Title"]</h1>

<form method="get" asp-action="Index">
    <div class="form-group">
        <label for="startDate">Fecha Inicial</label>
        <input type="date" name="startDate" class="form-control" />
    </div>
    <div class="form-group">
        <label for="endDate">Fecha Final</label>
        <input type="date" name="endDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>

<a href="/Alquiler/Resumen" class="btn btn-secondary mt-3">Ver Resumen</a>
<a href="/Alquiler/Create" class="btn btn-success mt-3">Crear Nuevo Alquiler</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Placa</th>
            <th>Cédula</th>
            <th>Fecha</th>
            <th>Tiempo en Días</th>
            <th>Valor Total</th>
            <th>Saldo</th>
            <th>Devuelto</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Placa</td>
                    <td>@item.Cedula</td>
                    <td>@item.Fecha.ToShortDateString()</td>
                    <td>@item.TiempoEnDias</td>
                    <td>@item.ValorTotal</td>
                    <td>@item.Saldo</td>
                    <td>@item.Devuelto ? "Sí" : "No"</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">No hay alquileres disponibles.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript">
    </script>
}
