@model PruebaTecnicaCovisian.Models.Alquiler

@{
    ViewData["Title"] = "Crear Alquiler";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Placa">Placa</label>
        <input asp-for="Placa" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cedula">Cedula del Cliente</label>
        <input asp-for="Cedula" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Fecha">Fecha de Alquiler</label>
        <input asp-for="Fecha" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TiempoEnDias">Tiempo en Dias</label>
        <input asp-for="TiempoEnDias" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ValorTotal">Valor Total</label>
        <input asp-for="ValorTotal" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Saldo">Saldo</label>
        <input asp-for="Saldo" type="number" class="form-control" />
    </div>
    <div class="form-group form-check">
        <input asp-for="Devuelto" class="form-check-input" />
        <label class="form-check-label" asp-for="Devuelto">Devuelto</label>
    </div>
    <button type="submit" class="btn btn-primary">Crear Alquiler</button>
</form>
